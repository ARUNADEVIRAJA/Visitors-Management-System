doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width initial-scale=1.0')
  title Admincast bootstrap 4 &amp; angular 5 admin template, &SHcy;&acy;&bcy;&lcy;&ocy;&ncy; &acy;&dcy;&mcy;&icy;&ncy;&kcy;&icy; | Login
  // GLOBAL MAINLY STYLES
  link(href='./assets/vendors/bootstrap/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='./assets/vendors/font-awesome/css/font-awesome.min.css' rel='stylesheet')
  link(href='./assets/vendors/themify-icons/css/themify-icons.css' rel='stylesheet')
  // THEME STYLES
  link(href='assets/css/main.css' rel='stylesheet')
  // PAGE LEVEL STYLES
  link(href='./assets/css/pages/auth-light.css' rel='stylesheet')
.content
  .brand
    a.link(href='index.html') AdminCAST
  form#login-form(action='/login' method='post')
    h2.login-title Log in
    .form-group
      .input-group-icon.right
        .input-icon
          i.fa.fa-envelope
        input.form-control(type='email' name='email' placeholder='Email' autocomplete='off')
    .form-group
      .input-group-icon.right
        .input-icon
          i.fa.fa-lock.font-16
        input.form-control(type='password' name='password' placeholder='Password')
    .form-group.d-flex.justify-content-between
      label.ui-checkbox.ui-checkbox-info
        input(type='checkbox')
        span.input-span
        | Remember me
      a(href='forgot_password.html') Forgot password?
    .form-group
      button.btn.btn-info.btn-block(type='submit') Login
    .text-center
      | Not a member?
      a.color-blue(href='register.html') Create account
// BEGIN PAGA BACKDROPS
.sidenav-backdrop.backdrop
.preloader-backdrop
  .page-preloader Loading
// END PAGA BACKDROPS
// CORE PLUGINS
script(src='./assets/vendors/jquery/dist/jquery.min.js' type='text/javascript')
script(src='./assets/vendors/popper.js/dist/umd/popper.min.js' type='text/javascript')
script(src='./assets/vendors/bootstrap/dist/js/bootstrap.min.js' type='text/javascript')
// PAGE LEVEL PLUGINS
script(src='./assets/vendors/jquery-validation/dist/jquery.validate.min.js' type='text/javascript')
// CORE SCRIPTS
script(src='assets/js/app.js' type='text/javascript')
// PAGE LEVEL SCRIPTS
script(type='text/javascript').
  $(function() {
  $('#login-form').validate({
  errorClass: "help-block",
  rules: {
  email: {
  required: true,
  email: true
  },
  password: {
  required: true
  }
  },
  highlight: function(e) {
  $(e).closest(".form-group").addClass("has-error")
  },
  unhighlight: function(e) {
  $(e).closest(".form-group").removeClass("has-error")
  },
  });
  });
